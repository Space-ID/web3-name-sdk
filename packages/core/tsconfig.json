{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@web3-name-sdk/core": ["./dist/index.d.ts"], // 生产环境
      "@web3-name-sdk/core/*": ["./dist/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types" // 添加自定义类型目录
    ],
    "outDir": "dist",
    "declarationDir": "dist/types"
  }
}